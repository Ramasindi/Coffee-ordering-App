<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/editname_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tv_name"
            android:importantForAutofill="no"
            android:inputType="textCapWords"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:paddingRight="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp" />

        <EditText
            android:id="@+id/editnumber_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            android:importantForAutofill="no"
            android:inputType="textCapWords"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:paddingRight="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp" />

        <TextView
            style="@style/HeaderText"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="0dp"
            android:paddingBottom="16dp"
            android:text="@string/toppings"
            android:paddingStart="16dp"
            android:paddingEnd="0dp" />

        <CheckBox
            android:id="@+id/whipped_cream_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="0dp"
            android:text="@string/cb_whipped_cream"
            android:textSize="16sp"
            android:paddingEnd="0dp" />

        <CheckBox
            android:id="@+id/chocolate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:paddingLeft="24dp"
            android:paddingRight="0dp"
            android:text="@string/cb_chocolate"
            android:textSize="16sp"
            android:paddingStart="24dp"
            android:paddingEnd="0dp" />

        <TextView

            style="@style/HeaderText"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="0dp"
            android:paddingBottom="16dp"
            android:text="@string/quantity"
            android:paddingStart="16dp"
            android:paddingEnd="0dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reduceOder_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:onClick="decrement"
                android:text="@string/dash"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/tv_quantinty"
                android:textColor="#000000" />

            <Button
                android:id="@+id/addOder_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="increment"
                android:text="@string/plus"
                android:textColor="#000000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableStart="@android:drawable/sym_action_email"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:drawablePadding="1dp"
                android:onClick="submitOrder"
                android:text="@string/btn_order"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableStart="@android:drawable/sym_action_chat"
                android:drawableLeft="@android:drawable/sym_action_chat"
                android:onClick="submitOrder"
                android:text="@string/btn_order"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>